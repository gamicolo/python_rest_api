version: '3.4'

services:

    redis:
        image: redis
        ports:
          - 6379:6379
        volumes:
          - .:/usr/src/app
        networks:
          - app-tier

    real-time-statistics:
        build: .
        ports:
          - "5000:5000"
        volumes:
          - .:/usr/src/app
        depends_on:
          - redis
        networks:
          - app-tier


networks:

    app-tier:
      driver: bridge
